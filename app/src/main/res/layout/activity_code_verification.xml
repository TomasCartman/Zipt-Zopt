<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|top">

    <TextView
        android:id="@+id/verify_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Verify +00 00000000000"
        android:textColor="@color/teal_green"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/waiting_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:text="Waiting to automatically detect an SMS sent to +00 00000000000."
        android:textAlignment="center" />

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:id="@+id/pin_entry"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="1234567890"
        android:textIsSelectable="false"
        android:cursorVisible="false"
        app:pinLineColors="@color/teal_green"
        android:maxLength="6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:text="@string/enter_six_digit_code_text"/>

</LinearLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZiptZopt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_green</item>
        <item name="colorPrimaryVariant">@color/darker_night_green</item>
        <item name="colorOnPrimary">@color/gray_font</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/gray_font</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>

        <item name="android:popupMenuStyle">@style/ZiptZopt.PopupMenu</item>
        <item name="android:buttonStyle">@style/ZiptZopt.Buttons</item>

    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/night_green</item>
        <item name="tabIndicatorColor">@color/turquoise</item>
        <item name="tabSelectedTextColor">@color/turquoise</item>
    </style>

    <style name="ViewPager2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/dark_green</item>
    </style>

    <style name="ZiptZopt.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:colorBackground">@color/arsenic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ZiptZopt.Screens" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/dark_green</item>
        <item name="android:textColor">@color/gray_font</item>
    </style>

    <style name="ZiptZopt.Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/turquoise</item>
    </style>

    <style name="ZiptZopt.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>

</resources>
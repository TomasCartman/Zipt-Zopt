<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZiptZopt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_green</item>
        <item name="colorPrimaryVariant">@color/teal_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/malachite</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="21">@color/black</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/teal_green</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/silver</item>
    </style>

    <style name="ViewPager2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ZiptZopt.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ZiptZopt.Screens" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/almost_black_font</item>
    </style>

    <style name="ZiptZopt.Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/turquoise</item>
    </style>

    <style name="ZiptZopt.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ZiptZopt.Accent.Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/malachite</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ZiptZopt.Accent.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/teal_green</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>

    <style name="ZiptZopt.Chat.Background.Src" parent="">
        <item name="android:src">@drawable/chat_background_image_day</item>
    </style>

    <style name="ZiptZopt.BubbleIncoming" parent="">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">13.5dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ZiptZopt.BubbleOutgoing" parent="">
        <item name="android:backgroundTint">@color/tea_green</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">13.5dp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ZiptZopt.Text" parent="">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>